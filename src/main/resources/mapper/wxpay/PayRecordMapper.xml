<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.keendo.wxpay.mapper.PayRecordMapper">
    <resultMap id="BaseResultMap" type="com.keendo.wxpay.model.PayRecord">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="order_sn" property="orderSn" jdbcType="VARCHAR"/>
        <result column="prepay_id" property="prepayId" jdbcType="INTEGER"/>
        <result column="open_id" property="openId" jdbcType="INTEGER"/>
        <result column="transaction_id" property="transactionId" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `order_sn` ,`prepay_id`,`open_id`,`transaction_id`,`amount`,`status`,`create_time`,`update_time`
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from e_pay_record where id = #{id}
    </select>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into e_pay_record
        (
        `order_sn` ,`prepay_id`,`open_id`,`transaction_id`,`amount`,`status`,`create_time`,`update_time`
        )
        values
        (#{orderSn},#{prepayId},#{openId},#{transactionId},#{amount},#{status},#{createTime},#{updateTime})
    </insert>

    <update id="update">
        update e_pay_record set
        order_sn = #{orderSn},
        prepay_id = #{prepayId},
        open_id = #{openId},
        transaction_id = #{transactionId},
        amount = #{amount},
        status = #{status},
        create_time = #{create_time},
        update_time = #{update_time}
        where id = #{id}
    </update>

    <select id="selectByStatus" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from e_pay_record where status = #{status}
    </select>

    <select id="selectByOrderSn" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from e_pay_record where order_sn = #{orderSn}
    </select>


</mapper>