<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.keendo.biz.mapper.TourOrderDetailMapper">
    <resultMap id="baseResultMap" type="com.keendo.biz.model.TourOrderDetail">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="phone_number" property="phoneNumber" jdbcType="VARCHAR" />
        <result column="id_card_number" property="idCardNumber" jdbcType="VARCHAR" />
        <result column="real_name" property="realName" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="INTEGER" />
        <result column="order_id" property="orderId" jdbcType="INTEGER" />
        <result column="price" property="price" jdbcType="DECIMAL" />
    </resultMap>

    <sql id="Base_Column_List" >
        `id` , `phone_number` , `id_card_number` , `real_name` , `gender` , `order_id`  , `price`
    </sql>

    <insert id="insert" parameterType="com.keendo.biz.model.TourOrderDetail">
        insert into
            e_tour_order_detail
                (`phone_number` , `id_card_number` , `real_name` , `gender` , `order_id` , `price` )
        values (#{phoneNumber} ,#{idCardNumber} ,#{realName} ,#{gender} ,#{orderId} ,#{price} )
    </insert>

    <select id="selectByOrderId" parameterType="map" resultMap="baseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
        e_tour_order_detail
        WHERE
            order_id = #{orderId}
    </select>


</mapper>
