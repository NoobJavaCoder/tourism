<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.keendo.biz.mapper.TourOrderMapper">
    <resultMap id="baseResultMap" type="com.keendo.biz.model.TourOrder">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="tour_product_id" property="tourProductId" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="user_id" property="userId" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List" >
        `id` , `tour_product_id` , `create_time` , `state` , `user_id` 
    </sql>

    <insert id="insert" parameterType="com.keendo.biz.model.TourOrder" useGeneratedKeys="true" keyProperty="id">
        insert into
            e_tour_order
                (`tour_product_id` , `create_time` , `state` , `user_id` )
        values ( #{tourProductId} ,#{createTime} ,#{state} ,#{userId} )
    </insert>

    <select id="selectByTourProductId" parameterType="map" resultMap="baseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            e_tour_order
        WHERE
            tour_product_id = #{tourProductId}
        limit
            #{startIndex} ,#{pageSize}
    </select>


    <select id="countByTourProductId" parameterType="map" resultType="java.lang.Integer">
        SELECT
            count(id)
        FROM
        e_tour_order
        WHERE
        tour_product_id = #{tourProductId}
    </select>

    <update id="updateState" parameterType="map">
        UPDATE
            e_tour_order
        SET
        state = #{toState}
        WHERE
        orderId = #{orderId}
        AND
        state = #{fromState}
    </update>

    <select id="selectById" resultMap="baseResultMap" parameterType="map">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            e_tour_order
        WHERE
            id = #{id}
    </select>
</mapper>
